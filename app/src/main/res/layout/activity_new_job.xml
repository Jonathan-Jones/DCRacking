<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/company_information_title"
        android:textSize="20sp"
        android:gravity="center"
        android:text="Company Information" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/company_name"
            android:text="@string/new_job_owner"
            android:layout_weight="0.23"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/company_name_edit_text"
            android:inputType="textPersonName"
            android:width="250dp"
            android:hint="Customer/Owner Name"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/company_info_date"
            android:text="@string/new_job_date"
            android:layout_weight="0.23"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/company_info_date_edit_text"
            android:layout_weight="0.23" />


    </LinearLayout>

</LinearLayout>