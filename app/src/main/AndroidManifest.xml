<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.repairs.dcrackingapp" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewJobActivity"
            android:label="@string/new_job"
            android:parentActivityName="com.repairs.dcrackingapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.repairs.dcrackingapp.MainActivity" />
        </activity>
        <activity
            android:name=".CreateRepairActivity"
            android:label="@string/create_repair"
            android:parentActivityName="com.repairs.dcrackingapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.repairs.dcrackingapp.MainActivity" />
        </activity>
        <activity
            android:name=".EditRepairActivity"
            android:label="@string/edit_repair"
            android:parentActivityName="com.repairs.dcrackingapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.repairs.dcrackingapp.MainActivity" />
        </activity>
        <activity
            android:name=".UploadActivity"
            android:label="@string/upload_work"
            android:parentActivityName="com.repairs.dcrackingapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.repairs.dcrackingapp.MainActivity" />
        </activity>
        <activity
            android:name=".CompanyActivity"
            android:label="@string/company_info"
            android:parentActivityName="com.repairs.dcrackingapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.repairs.dcrackingapp.MainActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/app_settings"
            android:parentActivityName="com.repairs.dcrackingapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.repairs.dcrackingapp.MainActivity" />
        </activity>
    </application>

</manifest>
